<div class="max-h-1081 h-1081 w-full flex ">
    <div class="w-1/2 flex items-center justify-center">
        <div class="block">
            <div class="w-590px">
                {% if section.settings.heading != blank %}
                <div class="font-slider">
                  {{ section.settings.heading }}
                </div>
            {% endif %}
            {% if section.settings.desc != blank %}
                <div class="desc-config pt-10 ">
                  {{ section.settings.desc }}
                </div>
            {% endif %}
            {% if section.settings.button_text != blank %}
                <a href="{{ section.settings.button_url }}"
                  class="button-config-text pt-14	"
                  aria-label="{{ ariaLabel }}">
                    <div class="button-config ">
                      {{- section.settings.button_text | escape -}}
                    </div>
                </a>
              {% endif %}
              </div>
     
        </div>
    </div>
    <div class="w-1/2 bg-no-repeat bg-cover" {% if section.settings.background_image != blank %} style="background-image: url({{ section.settings.background_image | img_url: 'master' }})" {% endif %}>

    </div>
</div>
{% schema %}
{
"name": "Front-page image and text",
"settings": [ 
{
"type": "image_picker",
"id": "background_image",
"label": "Background image"
}, 
{
"type": "image_picker",
"id": "mobile_background_image",
"label": "Mobile Background image"
},
{
  "type": "richtext",
  "id": "heading",
  "label": "Heading"
  }, 
  {
  "type": "richtext",
  "id": "desc",
  "label": "Description"
  },
  {
    "type": "text",
    "id": "button_text",
    "label": "Button text"
  },
  {
    "type": "url",
    "id": "button_url",
    "label": "Button url"
  }
],
"presets": [{
"name": "Front-page image and text",
"category": "Content"
}]
}
{% endschema %} 