<div id="slider-height-auto" class="  md:h-screen h-auto w-full block xl:flex xl:bg-contain sm:bg-cover bg-contain bg-no-repeat  bg-bottom sm:bg-right overflow-hidden" {% if section.settings.background_image != blank %} style="background-image: url({{ section.settings.background_image | img_url: 'master' }})" {% endif %}>
  <div class="mx-auto w-full xl:w-10 items-center flex" id="slider-2-height-auto">
    <div class="h-auto p-5 md:p-0 xl:w-full md:w-1/2 w-full xl:text-left text-center xl:my-0 mt-20 mb-10">
      {% if section.settings.heading != blank %}
      <div class="xl:text-navlink sm:text-white text-navlink text-sm23 font-light leading-40 w-full xl:w-290px title-at-page">
        {{ section.settings.heading }}
      </div>
  {% endif %}
  {% if section.settings.desc != blank %}
      <div class="desc-slider-img xl:text-darkgrey sm:text-white text-darkgrey e py-8	">
        {{ section.settings.desc }}
      </div>
  {% endif %}
  {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_url }}"
        class="flex xl:justify-start justify-center lg:button-config-text"
        aria-label="{{ ariaLabel }}">
          <div class="btn-slider sm:bg-colorprimary bg-white sm:text-white text-dark 	border	 border-solid sm:border-white border-current border">
            {{- section.settings.button_text | escape -}}
          </div>
      </a>
    {% endif %}
    </div>
  <div class="flex  mx-auto sm:w-full w-7/7 relative button-mobile-part" id="rd">
    <div class="swiper-button-next absolute top-15 left-77 md:block hidden">{% include 'icon_right-slider' %}</div>
    <div class="swiper-button-prev absolute top-15 left-72">{% include 'icon_left-slider' %}</div>
    
      <div class="w-10 swiper-container mySwiper hidde-mobile xl:mb-0 mb-10" id="rd-2">
          <div class="swiper-wrapper xl-wrapper-slider" id="swiper-wrapper">

    {% for block in section.blocks %}

    <div class="swiper-slide xl-responsive-slider" id="removeslider">
    <div class=" mr-8 relative mx-auto text-center
      flex items-center
      tablet-responsive
        rounded-md overflow-hidden
        md:w-full xl:h-full
        h-auto
       sm:pt-0
        cursor-pointer"
        x-data="{open: false }" @mouseover="open = true" @mouseout="open = false" @click="open = !open"
        >
          <div class="block">
          <div class="flex justify-center items-center tablet-responsive "> {{ block.settings.background_image | img_url: 'master'| img_tag: block.settings.icon.alt}} </div>
          </div>
          {% if block.settings.direct_to != blank %}
          <a href="{{block.settings.direct_to}}">
          {% endif %}
          <div class="absolute left-1/2  transform -translate-x-1/2  z-2 text-white"
          x-show.transition.opacity.duration.750="open"> 
          <div class="border-hover"> </div>
          {% if block.settings.direct_to != blank %}
          </a>
          {% endif %}
        </div>
          <div class="absolute left-1/2 top-1/2 transform -translate-x-1/2 bottom-5 z-2 text-white w-full"> 
            <div class="ucards-text text-4.5xl">
              {{ block.settings.stll}}
            </div>
          </div>
          <div class="absolute left-1/2 top-60 transform -translate-x-1/2 bottom-5 z-2 text-white"  x-show.transition.opacity.duration.750="open"> 
            <div class="">
              {% include 'icon_arrow-right-circle' %}
            </div>
          </div> 
    </div>
  </div>
    {% endfor %}
  </div>

</div>
  <!-- FOR MOBILE  -->
<div class="w-10 show-mobile sm:mb-0 mb-7" id="rd-2" >
{% for block in section.blocks %}
<div class=" mr-0 sm:mr-8 relative mx-auto text-center
sm:flex inline-block items-center
  rounded-md overflow-hidden
  md:w-full xl:h-full
  h-auto w-49
   sm:pt-0
  cursor-pointer"
  x-data="{open: false }" @mouseover="open = true" @mouseout="open = false" @click="open = !open"
  >
    <div class="block">
    {% if block.settings.mobile_background_image != blank %}<div class="flex justify-center items-center"> {{ block.settings.mobile_background_image | img_url: 'master'| img_tag: block.settings.icon.alt}} </div>{% endif %}
    </div>
    <div class="absolute left-1/2 top-0 transform -translate-x-1/2 bottom-5 z-2 text-white w-full h-full"> 
      <div class="ucards-text text-3xl h-full flex items-center justify-center w-98">
        {{ block.settings.stll}}
      </div>
    </div>
</div>
{% endfor %}
</div>
  <!-- END MOBILE  -->
</div>
</div>
</div>
