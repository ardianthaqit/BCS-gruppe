<div class=" h-auto xl:h-screen w-full flex bg-right bg-no-repeat	bg-cover xl:bg-contain	bg-remove-mobile" {% if section.settings.background_image != blank %} style="background-image: url({{ section.settings.background_image | img_url: 'master' }})" {% endif %}>
    <div class="w-10 mx-auto block lg:flex">
     <div id="hero__left-container" class="w-full xl:w-1/2 flex items-center ">
              <div id="hero__left-content" class="block w-590px">
              {% if section.settings.smtext != blank %}
                  <div id="hero__second-title" class="smtext">
                    {{ section.settings.smtext }}
                  </div>
              {% endif %}
                  {% if section.settings.heading != blank %}
                  <div class="font-slider">
                    {{ section.settings.heading }}
                  </div>
              {% endif %}
              {% if section.settings.desc != blank %}
                  <div id="hero__description" class="desc-config pt-10 items-center">
                    {{ section.settings.desc }}
                  </div>
              {% endif %}
                  <div class=" block md:flex ">
                      {% if section.settings.button_text != blank %}
                      <a href="{{ section.settings.button_url }}"
                        class="button-config-text pt-14	items-center"
                        aria-label="{{ ariaLabel }}">
                          <div class="greenbutton ">
                            {{- section.settings.button_text | escape -}}
                          </div>
                      </a>
                  {% endif %}
                  {% if section.settings.button_text != blank %}
                  <a href="{{ section.settings.secondbutton_url }}"
                    class="button-config-text pt-14 pl-5 flex items-center	"
                    aria-label="{{ ariaLabel }}">
                      <div class="buttontext">
                        {{- section.settings.secondbutton_text | escape -}}
                      </div>
                  </a>
              {% endif %}
                  </div>
              </div>
          </div>
          <div id="hero__right-container" class="w-full xl:w-1/2 flex items-center ">
              <div class="block lg:flex items-center  w-full">
                      {{ section.settings.image| img_url: 'master'| img_tag: block.settings.icon.alt}}
              </div>
          </div> 
        </div>      
          
  </div>
  {% schema %}
  {
  "name": "Karriere img txt",
  "settings": [ 
  {
  "type": "image_picker",
  "id": "background_image",
  "label": "Background image"
  }, 
  {
  "type": "image_picker",
  "id": "mobile_background_image",
  "label": "Mobile Background image"
  },
  {
      "type": "image_picker",
      "id": "image",
      "label": " image"
      },
      {
          "type": "richtext",
          "id": "smtext",
          "label": "Small Text"
       },  
      {
    "type": "richtext",
    "id": "heading",
    "label": "Heading"
    }, 
    {
    "type": "richtext",
    "id": "desc",
    "label": "Description"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button url"
    },
    {
      "type": "text",
      "id": "secondbutton_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "secondbutton_url",
      "label": "Button url"
    }
  ],
  "presets": [{
  "name": "Karriere img txt",
  "category": "Content"
  }]
  }
  {% endschema %} 