            <div id="review-card_name" class="flex justify-center items-center uppercase font-condensed text-4xl tracking-wide leading-tight pb-5">{{ block.settings.title}}</div>
            <div id="review-card_job-title" class="flex justify-center items-center uppercase font-condensed text-3xl mt-5 tracking-large leading-tightp b-5">{{ block.settings.subheading}}</div>
            <div id="review-card_description" class="pt-10">{{ block.settings.description }}</div>
            </div>
      </div>
      {% endfor %}
