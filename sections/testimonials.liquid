    <div class="mx-auto mr-14 w-10 items-center flex">
    <div class="flex  mx-auto" id="rd">
      {% for block in section.blocks %}
      <div class="mr-8 bg-cardsbg relative mx-auto text-center
        flex items-center
          rounded-md overflow-hidden
          md:w-full xl:h-full
          h-65vh sm:h-70vh md:h-40vh lg:h-35vh xl:h-50vh
          pt-7 sm:pt-0
          cursor-pointer sm:space-x-1.5 space-y-1.5
          lg:space-x-0 lg:space-y-0
          space-x-0 lg:space-y-0
          shadow-cardssh border border-border"
          >
