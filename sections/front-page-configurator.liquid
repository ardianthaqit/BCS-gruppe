<div class=" max-h-1081 h-1081 w-full flex bg-no-repeat bg-center bg-cover" {% if section.settings.background_image != blank %} style="background-image: url({{ section.settings.background_image | img_url: 'master' }})" {% endif %}>
  <div class="w-10  mx-auto flex">
      <div class="w-3/6	flex items-center">
          {% if section.settings.heading != blank %}
              <div>
                {{ section.settings.heading }}
              </div>
          {% endif %}
          {% if section.settings.desc != blank %}
              <div>
                {{ section.settings.desc }}
              </div>
          {% endif %}
          {% if section.settings.button_text != blank %}
              <a href="{{ section.settings.button_url }}"
                class="bg-button bg-btncolor mx-auto py-2 px-4 rounded  relative flex justify-center align-center items-center space-x-5"
                aria-label="{{ ariaLabel }}">
                  <div class="text-white text-lg md:text-2xl text-center uppercase tracking-wider">
                    {{- section.settings.button_text | escape -}}
                  </div>
              </a>
            {% endif %}
      </div>
      <div class="w-3/6	">

      </div>
  </div>
</div>
{% schema %}
    {
    "name": "Frontpage Configurator",
    "settings": [ 
    {
    "type": "image_picker",
    "id": "background_image",
    "label": "Background image"
    }, 
    {
    "type": "image_picker",
    "id": "mobile_background_image",
    "label": "Mobile Background image"
    },
    {
    "type": "richtext",
    "id": "heading",
    "label": "Heading"
    }, 
    {
    "type": "richtext",
    "id": "desc",
    "label": "Description"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button url"
    }
    ],
    "presets": [{
    "name": "Frontpage Configurator",
    "category": "Content"
    }]
    }
{% endschema %} 