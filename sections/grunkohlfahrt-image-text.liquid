<div class="max-h-1081 h-1081 w-full flex" {% if section.settings.background_image != blank %} style="background-image: url({{ section.settings.background_image | img_url: 'master' }})" {% endif %}>
        <div class="w-1/2 flex items-center justify-around	">
            <div class="block w-590px">
            {% if section.settings.smtext != blank %}
                <div class="smtext">
                  {{ section.settings.smtext }}
                </div>
            {% endif %}
                {% if section.settings.heading != blank %}
                <div class="font-slider">
                  {{ section.settings.heading }}
                </div>
            {% endif %}
            {% if section.settings.desc != blank %}
                <div class="desc-config pt-10 ">
                  {{ section.settings.desc }}
                </div>
            {% endif %}
                <div class="flex ">
                    {% if section.settings.button_text != blank %}
                    <a href="{{ section.settings.button_url }}"
                      class="button-config-text pt-14	"
                      aria-label="{{ ariaLabel }}">
                        <div class="greenbutton ">
                          {{- section.settings.button_text | escape -}}
                        </div>
                    </a>
                {% endif %}
                {% if section.settings.button_text != blank %}
                <a href="{{ section.settings.secondbutton_url }}"
                  class="button-config-text pt-14 pl-5	"
                  aria-label="{{ ariaLabel }}">
                    <div class="buttontext">
                      {{- section.settings.secondbutton_text | escape -}}
                    </div>
                </a>
            {% endif %}
                </div>
            </div>
        </div>
        <div class="w-1/2 flex">
            <div class="flex items-center">
                    {{ section.settings.image| img_url: 'master'| img_tag: block.settings.icon.alt}}
            </div>
        </div> 
        {% render 'pages.custom_fields' %}
</div>
