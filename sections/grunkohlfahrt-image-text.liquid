{
"name": "Grunkohlfahrt img txt",
"settings": [ 
{
"type": "image_picker",
"id": "background_image",
"label": "Background image"
}, 
{
"type": "image_picker",
"id": "mobile_background_image",
"label": "Mobile Background image"
},
{
    "type": "image_picker",
    "id": "image",
    "label": " image"
    },
    {
        "type": "richtext",
        "id": "smtext",
        "label": "Small Text"
     },  
    {
  "type": "richtext",
  "id": "heading",
  "label": "Heading"
  }, 
  {
  "type": "richtext",
  "id": "desc",
  "label": "Description"
  },
  {
    "type": "text",
    "id": "button_text",
    "label": "Button text"
  },
  {
    "type": "url",
    "id": "button_url",
    "label": "Button url"
  },
  {
    "type": "text",
    "id": "secondbutton_text",
    "label": "Button text"
  },
  {
    "type": "url",
    "id": "secondbutton_url",
    "label": "Button url"
  }
],
"presets": [{
"name": "Grunkohlfahrt img txt",
"category": "Content"
}]
}
{% endschema %} 