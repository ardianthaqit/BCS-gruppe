  "type": "text",
  "id": "title",
  "label": "Heading"
}, 
{
  "type": "richtext",
  "id": "subheading",
  "label": "Subheading"
},
{
    "type": "color",
    "id": "bgcolor",
    "label": "choose color"
  }
],
"blocks": [
  {
    "type": "card",
    "name": "Card",  
    "settings": [
    {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
    {
        "type": "richtext",
        "id": "title",
        "label": "Title"
      },
    {
        "type": "richtext",
        "id": "subheading",
        "label": "Subheading"
      }, 
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    }, 
    {
      "type": "url",
      "id": "link_to",
      "label": "Link"
    }
    ]
  }
],
"presets": [{
